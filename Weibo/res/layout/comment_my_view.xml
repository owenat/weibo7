<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7.0dip"
    android:paddingLeft="6.0dip"
    android:paddingRight="6.0dip"
    android:paddingTop="8.0dip" >

    <ImageView
        android:id="@+id/tweet_listitem_userface"
        style="@style/user_face_image" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.0dip"
        android:background="@drawable/topic_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tweet_listitem_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/v_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/tweet_comment_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userinfo_icon_female" />

            <TextView
                android:id="@+id/user_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_15"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tweet_listitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/tweet_listitem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:textColor="@android:color/black"
            android:textColorLink="@color/blue"
            android:textSize="@dimen/text_size_15" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/root_topic"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tweet_root_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorLink="@color/blue"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
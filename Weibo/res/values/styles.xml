<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    <!-- tabhost 底部菜单 -->
    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/tab_item</item>
    </style>

    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">21.0dip</item>
        <item name="android:layout_height">21.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_small</item>
    </style>
    <!-- banner四个按键 -->
    <style name="banner_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/banner_margin_top</item>
        <item name="android:visibility">gone</item>
    </style>
    <!-- 新鲜事 -->
    <style name="user_face_image">
        <item name="android:background">@drawable/widget_dface_border</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:src">@drawable/widget_dface_loading</item>
    </style>

    <style name="main_footbar_image">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">26.0dip</item>
        <item name="android:layout_marginTop">@dimen/banner_margin_top</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!-- setting -->
    <style name="common_linear_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/banner_margin_side</item>
        <item name="android:layout_marginRight">@dimen/banner_margin_side</item>
    </style>

    <style name="common_text_view">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">180.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_30</item>
        <item name="android:drawablePadding">@dimen/margin_10</item>
    </style>

    <style name="common_arrow">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_40</item>
        <item name="android:src">@drawable/ic_arrow</item>
    </style>

    <style name="userinfo_item_bg">
        <item name="android:layout_width">60.0dip</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/userinfo_item_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
 <!-- setting  微博 收藏 关注 粉丝-->
    <style name="userinfo_item_label">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">60.0dip</item>
        <item name="android:layout_height">30.0dip</item>
    </style>
<!-- setting  微博 收藏 关注 粉丝上的数字-->
    <style name="userinfo_item_get">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_3</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
         <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!--banner 转动条-->
     <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--ImageActivity 效果  -->
      <style name="Theme.HalfTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Translucent</item>
    </style>
        <style name="Translucent">
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_out</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_exit</item>
    </style>
      <!--微博详情底部菜单   -->
      <style name="Topic_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:paddingLeft">@dimen/margin_15</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/topic_bottom</item>
    </style>

</resources>